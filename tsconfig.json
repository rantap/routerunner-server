{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDirs": ["src", "tests"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
